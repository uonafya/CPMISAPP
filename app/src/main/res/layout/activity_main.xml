<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_5"
    tools:context=".CPIMSActivities.MainActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/ovc_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:queryHint="@string/ovc_search">

    </android.support.v7.widget.SearchView>

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/linear_design"
        android:id="@+id/ovcRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ovc_search">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>